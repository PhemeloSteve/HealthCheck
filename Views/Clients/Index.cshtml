
@model IEnumerable<HealthCheck.Models.Appointment>

<h2>Your Appointments</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no appointments.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Doctor</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@appointment.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(appointment.Doctor != null ? $"{appointment.Doctor.FirstName} {appointment.Doctor.LastName}" : "-")</td>
                <td>@appointment.Status</td>
                <td>
                    <a asp-controller="Appointments" asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-primary">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
